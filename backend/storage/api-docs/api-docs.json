{
  "openapi": "3.0.0",
  "info": {
    "title": "Envisage AI Platform API",
    "version": "2.0.0",
    "description": "Complete AI-powered marketplace API with real-time features",
    "contact": {
      "email": "api@envisage.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Local Development"
    },
    {
      "url": "https://api.envisage.com/api",
      "description": "Production"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Basic health check",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "healthy" },
                    "timestamp": { "type": "string" },
                    "service": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health/detailed": {
      "get": {
        "tags": ["Health"],
        "summary": "Detailed health check",
        "responses": {
          "200": {
            "description": "Detailed system health"
          }
        }
      }
    },
    "/ai/recommendations/generate": {
      "post": {
        "tags": ["AI - Recommendations"],
        "summary": "Generate AI recommendations",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["algorithm", "count"],
                "properties": {
                  "algorithm": {
                    "type": "string",
                    "enum": ["neural", "bandit", "session", "context", "hybrid"],
                    "example": "neural"
                  },
                  "count": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 50,
                    "example": 10
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Recommendations generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "algorithm": { "type": "string" },
                        "processing_time": { "type": "number" },
                        "recommendations": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": { "type": "integer" },
                              "name": { "type": "string" },
                              "price": { "type": "number" },
                              "score": { "type": "number" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ai/fraud/analyze": {
      "post": {
        "tags": ["AI - Fraud Detection"],
        "summary": "Analyze transaction for fraud",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["order_id"],
                "properties": {
                  "order_id": {
                    "type": "integer",
                    "example": 123
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Fraud analysis complete",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "risk_score": { "type": "number" },
                        "risk_level": {
                          "type": "string",
                          "enum": ["low", "medium", "high", "critical"]
                        },
                        "indicators": {
                          "type": "array",
                          "items": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/ai/sentiment/analyze": {
      "post": {
        "tags": ["AI - Sentiment Analysis"],
        "summary": "Analyze product sentiment",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["product_id"],
                "properties": {
                  "product_id": {
                    "type": "integer",
                    "example": 123
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sentiment analysis complete"
          }
        }
      }
    },
    "/ai/chat/message": {
      "post": {
        "tags": ["AI - Chatbot"],
        "summary": "Send message to chatbot",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["conversation_id", "message"],
                "properties": {
                  "conversation_id": {
                    "type": "string",
                    "example": "conv_123"
                  },
                  "message": {
                    "type": "string",
                    "example": "I need help finding a product"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Chatbot response"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  }
}
