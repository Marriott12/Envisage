APP_NAME="Envisage AI Platform v2.0"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://envisage-ai.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=envisage_ai
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=pusher
CACHE_DRIVER=redis
FILESYSTEM_DRIVER=s3
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3

# Email Configuration (Production: Use SMTP, Dev: Use Mailtrap/MailHog)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@envisage-ai.com
MAIL_FROM_NAME="${APP_NAME}"

# Frontend URL (for email links)
FRONTEND_URL=https://envisage-ai.com

# Stripe Payment Gateway
STRIPE_SECRET=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=envisage-ai-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# BROADCASTING & REAL-TIME (WebSockets)
# ============================================
# Choose: pusher (recommended for quick setup) or redis (self-hosted)
BROADCAST_DRIVER=pusher

# Option 1: Pusher (Cloud Service - https://pusher.com)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_APP_CLUSTER=mt1

# Option 2: Laravel Echo Server (Self-Hosted)
# If using self-hosted, set BROADCAST_DRIVER=redis and configure:
# - Laravel Echo Server: npm install -g laravel-echo-server
# - Redis connection above
# - Run: laravel-echo-server start

# ============================================
# ENVISAGE AI PLATFORM v2.0 CONFIGURATION
# ============================================

# OpenAI API (GPT-4, Embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# AI Services
AI_ENABLED=true
AI_MONITORING_ENABLED=true
AI_EXPLAINABILITY_ENABLED=true
AI_VERSIONING_ENABLED=true

# Recommendation Engine
RECOMMENDATION_CACHE_TTL=300
RECOMMENDATION_ALGORITHM=neural
BANDIT_EPSILON=0.1

# Computer Vision
VISION_MODEL=efficientnet-b3
VISION_CACHE_TTL=600
VISION_MAX_FILE_SIZE=10240

# Chatbot
CHATBOT_MODEL=gpt-4-turbo
CHATBOT_MAX_CONTEXT=10
CHATBOT_RATE_LIMIT=20

# Sentiment Analysis
SENTIMENT_CACHE_TTL=600
SENTIMENT_BATCH_SIZE=100

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_AUTO_BLOCK_THRESHOLD=85
FRAUD_REVIEW_THRESHOLD=60

# Predictive Analytics
FORECAST_MODEL=prophet
FORECAST_DAYS=30

# Content Generation
CONTENT_MODEL=gpt-4-turbo
CONTENT_CACHE_TTL=300

# Dynamic Pricing
DYNAMIC_PRICING_ENABLED=true
PRICING_MIN_MARGIN=10

# A/B Testing
AB_TESTING_ENABLED=true

# Cost Management
AI_DAILY_BUDGET=100
AI_MONTHLY_BUDGET=2000

# Sentry Error Tracking & Monitoring
SENTRY_ENABLED=false
SENTRY_LARAVEL_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.2

# Real-Time Notifications
NOTIFICATION_CHANNELS=database,broadcast,mail
NOTIFICATION_QUEUE=notifications

# Third-Party Integrations
SALESFORCE_CLIENT_ID=
HUBSPOT_API_KEY=
MAILCHIMP_API_KEY=

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
